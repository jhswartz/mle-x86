macro u8  u8    '$@'
macro u16 u16le '$@'
macro u32 u32le '$@'
macro u64 u64le '$@'

macro off8  u8  '$(offset $@)'
macro off16 u16 '$(offset $@)'
macro off32 u32 '$(offset $@)'
macro off64 u64 '$(offset $@)'

macro rel8  u8  '$(offset $@ 1)'
macro rel16 u16 '$(offset $@ 2)'
macro rel32 u32 '$(offset $@ 4)'
